generator client {
  provider = "prisma-client"
  output   = "../prisma/generated"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  email     String   @unique
  password  String
  createdAt DateTime @default(now())

  series Series[]
}

model Series {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  coverKey    String?
  coverUrl    String?
  createdAt   DateTime @default(now())

  userId Int
  user   User @relation(fields: [userId], references: [id])

  chapters Chapter[]
}

model Chapter {
  id        Int      @id @default(autoincrement())
  title     String
  number    Int
  createdAt DateTime @default(now())

  seriesId Int
  series   Series @relation(fields: [seriesId], references: [id])

  pages Page[]

  @@unique([seriesId, number])
}

model Page {
  id        Int      @id @default(autoincrement())
  order     Int
  type      FileType
  fileKey   String
  fileUrl   String
  mimeType  String
  size      Int
  createdAt DateTime @default(now())

  chapterId Int
  chapter   Chapter @relation(fields: [chapterId], references: [id])

  @@unique([chapterId, order])
}

enum FileType {
  IMAGE
  PDF
}
